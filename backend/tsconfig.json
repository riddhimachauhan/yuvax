{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",
    

    // Node.js settings
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],

// Allow JS files
     "allowJs": true,        
    "checkJs": false,       
    "noImplicitAny": false, 

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // TypeScript Strictness
    "strict": true,
    "esModuleInterop": true, // âœ… allows `import express from "express"`
    "skipLibCheck": true,
     "typeRoots": ["./node_modules/@types", "./src/types"]
  },
   "include": ["src"]
}
